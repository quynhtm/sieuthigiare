require_once 'autoload.php';

function Core_init(){
    Session::setSessionAnonymousUserShop();
    $uri = request_uri();
    if(preg_match("/(\/admin)/", $uri)==0){
        $files = array(
            'bootstrap/css/bootstrap.css',
            'css/font-awesome.css',
            'css/core.css',
            'js/jquery.alerts.js'
        );
        Loader::load('Core', $files);
    }
}
