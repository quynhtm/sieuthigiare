/**
 * Implements hook_init().
 */
function Admin_init(){
	$uri = request_uri();
	if(preg_match("/(\/admincp)/", $uri)!=0){
		$files = array(
			'Model/SupportOnline.php',
			'Controller/SupportOnlineController.php',
			'Model/ConfigInfo.php',
			'Controller/ConfigInfoController.php',
		);
		Loader::load('Admin', $files);
	}
}